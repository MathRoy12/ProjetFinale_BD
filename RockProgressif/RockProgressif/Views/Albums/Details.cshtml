@model RockProgressif.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePublication)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePublication)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreVentes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreVentes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoteCritiques)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoteCritiques)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Groupe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Groupe.GroupeId)
        </dd>
    </dl>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChansonAlbums.First().Chanson)
            </th>
            <th>
                
            </th>
        </tr>
        @foreach (var item in Model.ChansonAlbums)
        {
            <tr>
                <td>
                    @Html.DisplayFor(i => item.Chanson.Titre)
                </td>
                <td>
                    @{
                        int minute = item.Chanson.DureeSeconde / 60;
                        int seconde = item.Chanson.DureeSeconde % 60;
                        <text>
                            @minute : @seconde
                        </text>
                    }
                </td>
            </tr>
        }
        </thead>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AlbumId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>