@model IEnumerable<RockProgressif.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Pochette
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePublication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreVentes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteCritiques)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Groupe)
        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            <img style="height: 200px; width: 200px" src="data:image/png;base64,@Convert.ToBase64String(item.CoverContent)" alt="pochette @item.Nom"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePublication)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreVentes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoteCritiques)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Groupe.GroupeId)
        </td>
    </tr>
}
    </tbody>
</table>
